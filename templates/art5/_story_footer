<div class = 'story_footer'>

	<{if {and
            {ne %t 'STORY'}
            {ne {story_body $0 $1}{story_abstract $0 $1}}
         } {
		"<span class = 'full_story_link'>"
		{link {url 'STORY' 'topic' $0 'id' $1} @"More..."}
		" - </span>"
		}
	}>

	<{if {is_topic_editor $0} {
		{if cfg_top_ten_num {
			"<span class = 'hits'>("
			@"Hits:"
			' '
			{story_hits $0 $1}
			') - </span>'
			}
		}
		"<span class = 'edit_link'>"
		{link_to_edit_story $0 $1}
		" - </span>"
		}
	}>

	<span class = 'topic_link'>
	<{link {url 'TOPIC' 'topic' $0} {topic_name $0}}>
	</span>

    <span class = 'comment_link'>
    <{if {size {story_comments $0 $1}} {
        ?
        " - "
        {link
            {
                ?
                {url 'STORY' 'topic' $0 'id' $1}
                '#comments'
            }
            {
                ?
                {size {story_comments $0 $1}}
                ' '
                @"comments"
                }
            }
        }
    }>
    </span>

	<span class = 'tags'>
	<{foreach {story_tags $0 $1}
		{link {url 'SEARCH_BY_TAG' 'tag' $0} $0}
		', '
	}>
	</span>
</div>
