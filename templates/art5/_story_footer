<div class = 'story_footer'>

	<{if {ne %t 'STORY'} {
		"<span class = 'full_story_link'><a href = '"
		{url 'STORY' 'topic' $0 'id' $1}>'><{@"More..."}>
		"</a> |</span>"
		}
	}>

	<{if {is_topic_editor $0} {
		{if cfg_top_ten_num {
			"<span class = 'hits'>"
			@"Hits:"
			' '
			{story_hits $0 $1}
			' - </span>'
			}
		}
		"<span class = 'edit_link'>"
		{link_to_edit_story $0 $1}
		" - </span>"
		}
	}>

	<span class = 'topic_link'>
	<a href = '<{url 'TOPIC' 'topic' $0}>'><{topic_name $0}></a>
	</span>

	<span class = 'tags'>
	<{foreach {story_tags $0 $1} {
		"<a href = '"
		{url 'SEARCH_BY_TAG' 'tag' $0}
		"'>"
		$0
		'</a>'
		}
		', '
	}>
	</span>
</div>
