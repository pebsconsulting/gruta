	" <a href = '"
	{url 'SUBSCRIBE'}
	"'>"
	@"Subscribe"
	'</a>'
	'</p>'

	'<p>'
	@"Alternatively, this story will be available to everyone on "
	{story_date2 cfg_date_format %topic %id}
	'.</p>'
}>