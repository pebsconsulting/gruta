<div class = 'story_abstract'>
	<{story_abstract $0 $1}>
</div>

<div class = 'full_story_link'>
<{if
    {and
        {ne %t 'STORY'}
        {or
            {ne {story_date2 '%y%m%d' $0 $1} ''}
            {ne {story_body $0 $1}{story_abstract $0 $1}}
        }
    }
    {?
        {link {url 'STORY' 'topic' $0 'id' $1} @"More..."}
    }
}>
</div>
