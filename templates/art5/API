<{
{content_type "application/json"}

{case %c
"topics" {
    {?
        '['
        {foreach topics {? '"' $0 '"'} ","}
        ']'
    }
}

"stories_by_date" {
    {?
        '{'
        {foreach
            {stories_by_date %topics {or %num 10} {or %offset 0}}
            {story_as_json $0 $1}
            ','
        }
        '}'
    }
}

}>